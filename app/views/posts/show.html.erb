<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

  <%= form_for :comment, :url => "/comments" do |f|%>
    <%= f.label :content %>
    <%= f.text_area :content%>
    <%= f.collection_select :user_id, User.all, :id, :username, :prompt => true  %>

    
    <%= f.submit 'Create Comment' %>
  <% end %>